{
  "name": "frontigrade",
  "version": "0.0.1",
  "description": "Frontigrade, web user interface for Cloudigrade",
  "author": "Red Hat",
  "license": "GPL-3.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/cloudigrade/frontigrade.git"
  },
  "bugs": {
    "url": "https://github.com/cloudigrade/frontigrade/issues"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/common/**",
      "!src/index.js",
      "!src/setupTests.js",
      "!src/components/app.js",
      "!src/components/loremView/**",
      "!src/redux/store.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "scripts": {
    "build:clean": "rm -rf -- \"$(pwd)\"/build",
    "build:css": "node-sass-chokidar --include-path ./src --include-path ./node_modules src/styles/index.scss -o src/styles/.css",
    "build:js": "react-scripts build",
    "build": "run-s -l build:*",
    "start:js": "react-scripts start",
    "start": "run-p -l watch:css start:js",
    "test:lint-js": "eslint --ext=js --ext=jsx src",
    "test:unit": "react-scripts test --env=jsdom --coverage",
    "test": "run-s test:*",
    "watch:css": "npm run build:css && node-sass-chokidar --include-path ./src --include-path ./node_modules src/styles/index.scss -o src/styles/.css --watch --recursive"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "bootstrap": "^3.3.7",
    "detect-browser": "^2.4.0",
    "js-cookie": "^2.2.0",
    "lodash": "^4.17.10",
    "moment": "^2.22.1",
    "patternfly": "^3.45.0",
    "patternfly-react": "^2.2.1",
    "rcue": "^3.45.0",
    "react": "^16.3.2",
    "react-bootstrap": "^0.32.1",
    "react-dom": "^16.3.2",
    "react-infinite-scroller": "^1.1.4",
    "react-redux": "^5.0.7",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "react-scripts": "1.1.4",
    "redux": "^4.0.0",
    "redux-logger": "^3.0.6",
    "redux-promise-middleware": "^5.1.1",
    "redux-thunk": "^2.2.0",
    "prop-types": "^15.6.1"
  },
  "devDependencies": {
    "create-react-app": "^1.5.2",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.3",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jest": "^21.15.1",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.7.0",
    "jest": "^21.2.1",
    "jest-cli": "^21.2.1",
    "moxios": "^0.4.0",
    "node-sass-chokidar": "^1.2.2",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.12.1",
    "redux-mock-store": "^1.4.0"
  }
}
